{
  "dashboard": {
    "id": null,
    "uid": "database-health",
    "title": "Database & Connection Pool Health",
    "description": "Task P0-13: Real-time monitoring of pgBouncer connection pools and database performance",
    "tags": ["database", "pgbouncer", "connection-pool", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "panels": [
      {
        "id": 1,
        "title": "Connection Pool Utilization (%)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "connection_pool_utilization_ratio{pool_type=\"transactional\"} * 100",
            "legendFormat": "Transactional Pool",
            "refId": "A"
          },
          {
            "expr": "connection_pool_utilization_ratio{pool_type=\"session\"} * 100",
            "legendFormat": "Session Pool",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Utilization",
            "max": 100,
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "thresholds": [
          {
            "value": 75,
            "colorMode": "custom",
            "fill": true,
            "line": true,
            "op": "gt",
            "fillColor": "rgba(255, 152, 48, 0.2)",
            "lineColor": "rgb(255, 152, 48)"
          },
          {
            "value": 90,
            "colorMode": "custom",
            "fill": true,
            "line": true,
            "op": "gt",
            "fillColor": "rgba(237, 46, 24, 0.3)",
            "lineColor": "rgb(237, 46, 24)"
          }
        ],
        "alert": {
          "name": "Connection Pool High Utilization",
          "message": "Connection pool utilization is above 80%",
          "conditions": [
            {
              "evaluator": {
                "params": [80],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "notifications": []
        }
      },
      {
        "id": 2,
        "title": "Active vs Idle Connections",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "connection_pool_active_connections{pool_type=\"transactional\"}",
            "legendFormat": "Transactional - Active",
            "refId": "A"
          },
          {
            "expr": "connection_pool_idle_connections{pool_type=\"transactional\"}",
            "legendFormat": "Transactional - Idle",
            "refId": "B"
          },
          {
            "expr": "connection_pool_active_connections{pool_type=\"session\"}",
            "legendFormat": "Session - Active",
            "refId": "C"
          },
          {
            "expr": "connection_pool_idle_connections{pool_type=\"session\"}",
            "legendFormat": "Session - Idle",
            "refId": "D"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "Pool Overflow Usage",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 8,
          "h": 6
        },
        "targets": [
          {
            "expr": "connection_pool_overflow_connections{pool_type=\"transactional\"}",
            "legendFormat": "Transactional Pool",
            "refId": "A"
          },
          {
            "expr": "connection_pool_overflow_connections{pool_type=\"session\"}",
            "legendFormat": "Session Pool",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Overflow Connections",
            "min": 0
          }
        ],
        "description": "Number of connections beyond pool_size currently in use. High values indicate pool may be undersized."
      },
      {
        "id": 4,
        "title": "Database Query Duration (p50, p95, p99)",
        "type": "graph",
        "gridPos": {
          "x": 8,
          "y": 8,
          "w": 8,
          "h": 6
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(database_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p50 (median)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(database_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration",
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 1.0,
            "colorMode": "critical",
            "fill": false,
            "line": true,
            "op": "gt"
          }
        ]
      },
      {
        "id": 5,
        "title": "Database Query Rate (queries/sec)",
        "type": "graph",
        "gridPos": {
          "x": 16,
          "y": 8,
          "w": 8,
          "h": 6
        },
        "targets": [
          {
            "expr": "rate(database_queries_total{status=\"success\"}[5m])",
            "legendFormat": "Success - {{pool_type}}",
            "refId": "A"
          },
          {
            "expr": "rate(database_queries_total{status=\"error\"}[5m])",
            "legendFormat": "Error - {{pool_type}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Queries/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 6,
        "title": "Connection Pool Health Status",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 14,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "connection_pool_utilization_ratio{pool_type=\"transactional\"} * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 75,
                  "color": "yellow"
                },
                {
                  "value": 90,
                  "color": "red"
                }
              ]
            },
            "unit": "percent",
            "decimals": 1
          }
        }
      },
      {
        "id": 7,
        "title": "Session Pool Health Status",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 14,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "connection_pool_utilization_ratio{pool_type=\"session\"} * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 75,
                  "color": "yellow"
                },
                {
                  "value": 90,
                  "color": "red"
                }
              ]
            },
            "unit": "percent",
            "decimals": 1
          }
        }
      },
      {
        "id": 8,
        "title": "Database Error Rate",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 14,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "rate(database_errors_total[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 0.01,
                  "color": "yellow"
                },
                {
                  "value": 0.1,
                  "color": "red"
                }
              ]
            },
            "unit": "errors/sec",
            "decimals": 3
          }
        }
      },
      {
        "id": 9,
        "title": "Total Queries Executed (5m)",
        "type": "stat",
        "gridPos": {
          "x": 18,
          "y": 14,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(increase(database_queries_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(process_start_time_seconds[5m]) > 0",
          "iconColor": "blue",
          "step": "1m",
          "tagKeys": "deployment",
          "titleFormat": "Deployment",
          "textFormat": "Application restarted"
        }
      ]
    },
    "templating": {
      "list": []
    },
    "links": [
      {
        "title": "Runbook: Connection Pool High",
        "url": "https://docs.company.com/runbooks/connection-pool-high",
        "type": "link"
      },
      {
        "title": "pgBouncer Documentation",
        "url": "https://www.pgbouncer.org/usage.html",
        "type": "link"
      }
    ]
  },
  "folderId": null,
  "overwrite": true
}

